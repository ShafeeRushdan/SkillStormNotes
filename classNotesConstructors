package hello;

public class Constructors {
	Pizza pizza = new Pizza(); //constructor
	pizza.slices = 8;
	
	Pizza pie = new Pizza(6); //overloading constructor
	
	pizza.eat();
	System.out.println(pizza.slices);
	System.out.println(pie.slices);
		
	}

}

class Pizza {
	int slices;
	String topping;
	public void eat() {
		slices = slices - 1;
	}
}
